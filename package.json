{
  "name": "group-income-simple",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "scripts": {
    "backend": "cross-env LOAD_TARGET_FILE=./backend/index.js nodemon --ignore backend/discard/ --watch backend/ Gruntfile.js",
    "rollup": "rollup -c",
    "rollup-dev": "rollup -c -w",
    "sass-dev": "node-sass --output-style nested --source-map true -w -r -o ./dist/assets/css ./frontend/assets/style",
    "sass-dist": "node-sass --output-style compressed -o ./dist/assets/css ./frontend/assets/style",
    "cy:open": "cypress open",
    "test": "grunt test",
    "eslint": "eslint \"**/*.{js,vue}\"",
    "i18n": "node scripts/i18n.js",
    "flow": "flow",
    "double": "PORT_SHIFT=1 grunt dev",
    "stylelint": "stylelint 'frontend/**/*.{css,scss,vue}' --fix",
    "docker": "./scripts/docker.sh"
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "plugin:cypress/recommended",
      "plugin:flowtype/recommended",
      "plugin:vue/essential",
      "standard"
    ],
    "plugins": [
      "cypress",
      "flowtype",
      "import"
    ],
    "rules": {
      "vue/max-attributes-per-line": "off",
      "vue/html-indent": "off",
      "flowtype/no-types-missing-file-annotation": "off",
      "quote-props": "off",
      "dot-notation": "off",
      "import/extensions": [
        2,
        "ignorePackages"
      ]
    }
  },
  "eslintIgnore": [
    "!.Gruntfile.babel.js",
    "**/vue2-slider.vue",
    "frontend/_static/*",
    "frontend/assets/*",
    "frontend/controller/utils/primus.js",
    "frontend/utils/flowTyper.js",
    "backend/discard/*",
    "historical/*",
    "shared/types.js",
    "dist/*",
    "ignored/*",
    "test/cypress/cache/*"
  ],
  "browserslist": "> 1% and since 2018 and not dead",
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "include",
            "mixin",
            "extend",
            "content",
            "each",
            "for"
          ]
        }
      ],
      "declaration-empty-line-before": [
        "never"
      ],
      "at-rule-empty-line-before": null,
      "font-family-no-missing-generic-family-keyword": null,
      "string-quotes": "double",
      "selector-pseudo-element-no-unknown": null,
      "no-descending-specificity": null
    }
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.okturtles.com:okturtles/group-income-simple.git"
  },
  "author": "okTurtles Foundation",
  "license": "GPL-3.0",
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.11.1",
    "@hapi/boom": "7.4.2",
    "@hapi/hapi": "18.4.0",
    "@hapi/joi": "15.1.0",
    "blakejs": "1.1.0",
    "buffer": "5.2.1",
    "form-data": "2.5.0",
    "i18next": "17.0.4",
    "i18next-xhr-backend": "3.0.0",
    "localforage": "1.7.3",
    "multihashes": "0.4.14",
    "nacl-blob": "2.0.2",
    "nacl-stream": "0.3.5",
    "primus": "7.3.3",
    "primus-responder": "1.0.4",
    "primus-rooms": "3.4.1",
    "scrypt-async": "2.0.1",
    "systemjs": "6.1.1",
    "tweetnacl": "1.0.1",
    "tweetnacl-util": "0.15.0",
    "velocity-animate": "1.5.2",
    "vue": "2.6.10",
    "vue-clickaway": "2.2.2",
    "vue-router": "3.1.3",
    "vue-script2": "2.1.0",
    "vue-slider-component": "3.0.38",
    "vuelidate": "0.7.4",
    "vuex": "3.1.1",
    "ws": "7.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.6.0",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "7.5.5",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/plugin-transform-runtime": "7.6.0",
    "@babel/preset-env": "7.6.0",
    "@babel/preset-flow": "7.0.0",
    "@babel/register": "7.6.0",
    "@babel/runtime": "7.6.0",
    "babel-eslint": "10.0.3",
    "babel-plugin-root-import": "6.4.1",
    "babel-plugin-transform-inline-environment-variables": "0.4.3",
    "chalk": "2.4.2",
    "cheerio": "1.0.0-rc.3",
    "cypress": "3.4.1",
    "eslint": "6.4.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-cypress": "2.6.1",
    "eslint-plugin-flowtype": "4.3.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "eslint-plugin-vue": "5.2.3",
    "flow-bin": "0.108.0",
    "flow-remove-types": "2.108.0",
    "grunt": "1.0.4",
    "grunt-check-dependencies": "1.0.0",
    "grunt-contrib-clean": "2.0.0",
    "grunt-contrib-connect": "2.0.0",
    "grunt-contrib-copy": "1.0.0",
    "grunt-contrib-watch": "1.1.0",
    "grunt-exec": "3.0.0",
    "grunt-sass": "3.0.2",
    "load-grunt-tasks": "5.0.0",
    "mocha": "6.2.0",
    "node-fetch": "2.6.0",
    "node-sass": "4.12.0",
    "pug-lint-vue": "0.3.0",
    "rollup": "1.21.4",
    "rollup-plugin-alias": "1.5.2",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-css-only": "1.0.0",
    "rollup-plugin-eslint": "7.0.0",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-sass-variables": "0.1.1",
    "rollup-plugin-vue": "5.0.1",
    "should": "13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "7.3.2",
    "stylelint": "11.0.0",
    "stylelint-config-standard": "19.0.0",
    "vue-cli-plugin-pug": "1.0.7",
    "vue-template-compiler": "2.6.10"
  }
}
