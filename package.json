{
  "name": "group-income-simple",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "scripts": {
    "backend": "cross-env LOAD_TARGET_FILE=./backend/index.js nodemon --ignore backend/discard/ --watch backend/ Gruntfile.js",
    "rollup": "rollup -c",
    "rollup-dev": "rollup -c -w",
    "sass-dev": "node-sass --include-path ./node_modules/bulma --include-path ./node_modules/@fortawesome/fontawesome-free/scss --output-style nested --source-map true -w -r -o ./dist/assets/css ./frontend/assets/sass",
    "sass-dist": "node-sass --include-path ./node_modules/bulma --include-path ./node_modules/@fortawesome/fontawesome-free/scss --output-style compressed -o ./dist/assets/css ./frontend/assets/sass",
    "server": "serve -p 8000",
    "dev": "npm-run-all --parallel backend sass-dev rollup-dev server",
    "test": "xvfb-maybe grunt test",
    "eslint": "eslint \"**/*.{js,vue}\"",
    "i18n": "node scripts/i18n.js",
    "flow": "flow",
    "double": "PORT_SHIFT=1 grunt dev",
    "stylelint": "stylelint 'frontend/**/*.{css,scss,vue}' --fix",
    "docker": "./scripts/docker.sh"
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "plugin:flowtype/recommended",
      "plugin:vue/essential",
      "standard"
    ],
    "plugins": [
      "flowtype"
    ],
    "rules": {
      "vue/max-attributes-per-line": "off",
      "vue/html-indent": "off",
      "flowtype/no-types-missing-file-annotation": "off"
    }
  },
  "eslintIgnore": [
    "!.Gruntfile.babel.js",
    "**/vue2-slider.vue",
    "frontend/_static/*",
    "frontend/assets/*",
    "frontend/controller/utils/primus.js",
    "frontend/utils/flow-typer.js",
    "backend/discard/*",
    "historical/*",
    "shared/types.js",
    "dist/*",
    "ignored/*",
    "test/*"
  ],
  "browserslist": "> 1% and since 2018 and not dead",
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "include",
            "mixin",
            "extend",
            "content",
            "each"
          ]
        }
      ],
      "declaration-empty-line-before": [
        "never"
      ],
      "at-rule-empty-line-before": null,
      "font-family-no-missing-generic-family-keyword": null,
      "string-quotes": "double"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.okturtles.com:okturtles/group-income-simple.git"
  },
  "author": "okTurtles Foundation",
  "license": "GPL-3.0",
  "dependencies": {
    "@babel/runtime": "7.3.1",
    "@fortawesome/fontawesome-free": "5.5.0",
    "blakejs": "1.1.0",
    "boom": "7.2.0",
    "buffer": "5.2.1",
    "bulma": "0.7.0",
    "hapi": "17.5.3",
    "i18next": "11.5.0",
    "i18next-xhr-backend": "1.5.1",
    "joi": "13.5.2",
    "localforage": "1.7.2",
    "multihashes": "0.4.13",
    "primus": "7.3.2",
    "primus-responder": "1.0.4",
    "primus-rooms": "3.4.1",
    "scrypt-async": "2.0.0",
    "systemjs": "3.0.0",
    "tweetnacl": "1.0.0",
    "tweetnacl-util": "0.15.0",
    "velocity-animate": "1.5.2",
    "vue": "2.6.3",
    "vue-circle-slider": "1.0.2",
    "vue-clickaway": "2.2.2",
    "vue-router": "3.0.2",
    "vue-script2": "2.0.3",
    "vue-slider-component": "2.8.6",
    "vuelidate": "0.7.4",
    "vuex": "3.1.0",
    "ws": "6.1.3"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.3.0",
    "@babel/plugin-proposal-object-rest-spread": "7.3.1",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/plugin-transform-runtime": "7.2.0",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-flow": "7.0.0",
    "@babel/register": "7.0.0",
    "babel-eslint": "10.0.1",
    "babel-plugin-transform-inline-environment-variables": "0.4.3",
    "chalk": "2.4.2",
    "cheerio": "1.0.0-rc.1",
    "eslint": "5.13.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-flowtype": "3.2.1",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-standard": "4.0.0",
    "eslint-plugin-vue": "5.1.0",
    "flow-bin": "0.92.0",
    "grunt": "1.0.3",
    "grunt-check-dependencies": "1.0.0",
    "grunt-contrib-clean": "2.0.0",
    "grunt-contrib-connect": "2.0.0",
    "grunt-contrib-copy": "1.0.0",
    "grunt-contrib-watch": "1.1.0",
    "grunt-exec": "3.0.0",
    "grunt-sass": "3.0.2",
    "load-grunt-tasks": "4.0.0",
    "mocha": "5.2.0",
    "nightmare": "3.0.1",
    "node-fetch": "2.3.0",
    "node-sass": "4.11.0",
    "rollup": "1.1.2",
    "rollup-plugin-alias": "1.5.1",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "9.2.0",
    "rollup-plugin-css-only": "1.0.0",
    "rollup-plugin-eslint": "5.0.0",
    "rollup-plugin-flow": "1.1.1",
    "rollup-plugin-json": "3.1.0",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-node-resolve": "4.0.0",
    "rollup-plugin-sass-variables": "0.1.1",
    "rollup-plugin-vue": "4.6.2",
    "should": "13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "7.2.3",
    "stylelint": "9.10.1",
    "stylelint-config-standard": "18.2.0",
    "vue-cli-plugin-pug": "1.0.7",
    "vue-template-compiler": "2.6.3",
    "xvfb-maybe": "0.2.1"
  }
}
