{
  "name": "group-income-simple",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "scripts": {
    "backend": "cross-env LOAD_TARGET_FILE=./backend/index.js nodemon --ignore backend/discard/ --watch backend/ Gruntfile.js",
    "rollup": "rollup -c",
    "rollup-dev": "rollup -c -w",
    "sass-dev": "node-sass --output-style nested --source-map true -w -r -o ./dist/assets/css ./frontend/assets/style",
    "sass-dist": "node-sass --output-style compressed -o ./dist/assets/css ./frontend/assets/style",
    "server": "serve -p 8000",
    "dev": "npm-run-all --parallel backend sass-dev rollup-dev server",
    "test": "xvfb-maybe grunt test",
    "eslint": "eslint \"**/*.{js,vue}\"",
    "i18n": "node scripts/i18n.js",
    "flow": "flow",
    "double": "PORT_SHIFT=1 grunt dev",
    "stylelint": "stylelint 'frontend/**/*.{css,scss,vue}' --fix",
    "docker": "./scripts/docker.sh"
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "plugin:flowtype/recommended",
      "plugin:vue/essential",
      "standard"
    ],
    "plugins": [
      "flowtype"
    ],
    "rules": {
      "vue/max-attributes-per-line": "off",
      "vue/html-indent": "off",
      "flowtype/no-types-missing-file-annotation": "off"
    }
  },
  "eslintIgnore": [
    "!.Gruntfile.babel.js",
    "**/vue2-slider.vue",
    "frontend/_static/*",
    "frontend/assets/*",
    "frontend/controller/utils/primus.js",
    "frontend/utils/flowTyper.js",
    "backend/discard/*",
    "historical/*",
    "shared/types.js",
    "dist/*",
    "ignored/*",
    "test/*"
  ],
  "browserslist": "> 1% and since 2018 and not dead",
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "include",
            "mixin",
            "extend",
            "content",
            "each",
            "for"
          ]
        }
      ],
      "declaration-empty-line-before": [
        "never"
      ],
      "at-rule-empty-line-before": null,
      "font-family-no-missing-generic-family-keyword": null,
      "string-quotes": "double",
      "selector-pseudo-element-no-unknown": null,
      "no-descending-specificity": null
    }
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.okturtles.com:okturtles/group-income-simple.git"
  },
  "author": "okTurtles Foundation",
  "license": "GPL-3.0",
  "dependencies": {
    "@babel/runtime": "7.4.5",
    "@fortawesome/fontawesome-free": "5.9.0",
    "@hapi/boom": "7.4.2",
    "@hapi/hapi": "18.3.1",
    "@hapi/joi": "15.0.3",
    "blakejs": "1.1.0",
    "buffer": "5.2.1",
    "i18next": "17.0.4",
    "i18next-xhr-backend": "3.0.0",
    "localforage": "1.7.3",
    "multihashes": "0.4.14",
    "primus": "7.3.3",
    "primus-responder": "1.0.4",
    "primus-rooms": "3.4.1",
    "scrypt-async": "2.0.1",
    "systemjs": "3.1.6",
    "tweetnacl": "1.0.1",
    "tweetnacl-util": "0.15.0",
    "velocity-animate": "1.5.2",
    "vue": "2.6.3",
    "vue-clickaway": "2.2.2",
    "vue-router": "3.0.6",
    "vue-script2": "2.0.3",
    "vue-slider-component": "3.0.32",
    "vuelidate": "0.7.4",
    "vuex": "3.1.1",
    "ws": "7.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.4.5",
    "@babel/plugin-proposal-class-properties": "7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "7.4.4",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/plugin-transform-runtime": "7.4.4",
    "@babel/preset-env": "7.4.5",
    "@babel/preset-flow": "7.0.0",
    "@babel/register": "7.4.4",
    "babel-eslint": "10.0.2",
    "babel-plugin-transform-inline-environment-variables": "0.4.3",
    "chalk": "2.4.2",
    "cheerio": "1.0.0-rc.3",
    "eslint": "5.16.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-flowtype": "3.10.4",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-standard": "4.0.0",
    "eslint-plugin-vue": "5.2.2",
    "flow-bin": "0.101.1",
    "grunt": "1.0.4",
    "grunt-check-dependencies": "1.0.0",
    "grunt-contrib-clean": "2.0.0",
    "grunt-contrib-connect": "2.0.0",
    "grunt-contrib-copy": "1.0.0",
    "grunt-contrib-watch": "1.1.0",
    "grunt-exec": "3.0.0",
    "grunt-sass": "3.0.2",
    "load-grunt-tasks": "5.0.0",
    "mocha": "6.1.4",
    "nightmare": "3.0.2",
    "node-fetch": "2.6.0",
    "node-sass": "4.12.0",
    "rollup": "1.16.1",
    "rollup-plugin-alias": "1.5.2",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-commonjs": "10.0.0",
    "rollup-plugin-css-only": "1.0.0",
    "rollup-plugin-eslint": "6.0.0",
    "rollup-plugin-flow": "1.1.1",
    "rollup-plugin-json": "4.0.0",
    "rollup-plugin-node-globals": "1.4.0",
    "rollup-plugin-node-resolve": "5.0.3",
    "rollup-plugin-sass-variables": "0.1.1",
    "rollup-plugin-vue": "5.0.0",
    "should": "13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "7.3.2",
    "stylelint": "10.1.0",
    "stylelint-config-standard": "18.3.0",
    "vue-cli-plugin-pug": "1.0.7",
    "vue-template-compiler": "2.6.3",
    "xvfb-maybe": "0.2.1"
  }
}
