    "@babel/register": "7.0.0",
    "babel-eslint": "10.0.1",
    "babel-plugin-transform-inline-environment-variables": "0.4.3",
    "babelify": "10.0.0",
    "browserify": "16.2.3",
    "chalk": "2.4.2",
    "cheerio": "1.0.0-rc.1",
    "cross-env": "5.2.0",
    "eslint-plugin-flowtype": "3.2.1",
    "flow-bin": "0.91.0",
    "grunt": "1.0.3",
    "grunt-browserify": "5.3.0",
