{
  "name": "group-income-simple",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "scripts": {
    "backend": "cross-env LOAD_TARGET_FILE=./backend/index.js nodemon --ignore backend/discard/ --watch backend/ Gruntfile.js",
    "rollup": "rollup -c",
    "rollup-dev": "rollup -c -w",
    "sass-dev": "node-sass --include-path ./node_modules/bulma --include-path ./node_modules/@fortawesome/fontawesome-free/scss --output-style nested --source-map true -w -r -o ./dist/simple/assets/css ./frontend/simple/assets/sass",
    "sass-dist": "node-sass --include-path ./node_modules/bulma --include-path ./node_modules/@fortawesome/fontawesome-free/scss --output-style compressed -o ./dist/simple/assets/css ./frontend/simple/assets/sass",
    "dev": "npm-run-all --parallel backend sass-dev rollup-dev",
    "test": "xvfb-maybe grunt test",
    "i18n": "node scripts/i18n.js",
    "flow": "flow",
    "double": "PORT_SHIFT=1 grunt dev",
    "stylelint": "stylelint 'frontend/simple/**/*.{css,scss,vue}' --fix",
    "docker": "./scripts/docker.sh"
  },
  "standard": {
    "ignore": [
      "**/vue2-slider.vue",
      "frontend/_static/*",
      "frontend/simple/assets/*",
      "frontend/simple/controller/utils/primus.js",
      "frontend/simple/utils/flow-typer.js",
      "backend/discard/*",
      "shared/types.js"
    ],
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "rules": {
      "flowtype-errors/show-errors": 2
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 9"
  ],
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "include",
            "mixin",
            "extend",
            "content",
            "each"
          ]
        }
      ],
      "declaration-empty-line-before": [
        "never"
      ],
      "at-rule-empty-line-before": null,
      "font-family-no-missing-generic-family-keyword": null,
      "string-quotes": "double"
    }
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.okturtles.com:okturtles/group-income-simple.git"
  },
  "author": "okTurtles Foundation",
  "license": "GPL-3.0",
  "dependencies": {
    "@babel/runtime": "7.3.1",
    "@fortawesome/fontawesome-free": "5.5.0",
    "blakejs": "1.1.0",
    "boom": "7.2.0",
    "bulma": "0.7.0",
    "flow-typer-js": "0.6.0",
    "hapi": "17.5.3",
    "i18next": "11.5.0",
    "i18next-xhr-backend": "1.5.1",
    "joi": "13.5.2",
    "localforage": "1.7.2",
    "multihashes": "0.4.13",
    "primus": "7.3.2",
    "primus-responder": "1.0.4",
    "primus-rooms": "3.4.1",
    "scrypt-async": "2.0.0",
    "tweetnacl": "1.0.0",
    "tweetnacl-util": "0.15.0",
    "velocity-animate": "1.5.2",
    "vue": "2.5.22",
    "vue-circle-slider": "1.0.2",
    "vue-clickaway": "2.2.2",
    "vue-router": "3.0.2",
    "vue-script2": "2.0.3",
    "vue-slider-component": "2.8.6",
    "vuelidate": "0.7.4",
    "vuex": "3.1.0",
    "ws": "6.1.3"
  },
